[user]
  name = Cabe Branson
  email = caleb.branson@gmail.com
[alias]
  st = status
  ci = commit
  br = branch
  ch = checkout
  ls = ls-files
[core]
  # Use custom `.gitignore`
  excludesfile = ~/.gitignore
[color]
  # Use colors in Git commands that are capable of colored output when outputting to the terminal
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
