# better ls
alias ls="ls -G"
alias la="ls -a"
alias ll="ls -l"
alias lla="ls -la"
alias lls='ls -l | sort -n +3 | tail -10'

# better mkdir
alias mkdir="mkdir -pv"

# quick clear
alias x="clear"

# quick nav
alias ~="cd ~"
alias ..="cd .."

# interactive/verbose tasks
alias rm="rm -ivr"
alias cp="cp -iv"
alias mv="mv -iv"
alias ln="ln -iv"

# rimraf
alias rimraf="rm -rf"

# git aliases
alias g="git"
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gco="git checkout"
alias g--="git checkout --"
alias gcom="git checkout master"
alias gd="git diff"
alias gds="git diff --staged"
alias gf="git fetch"
alias gg="git push"
alias gl="git lg"
alias gm="git merge"
alias gn="git checkout -b"
alias gp="git pull"
alias gr="git reset HEAD --"
alias gs="git status"
alias gss="git status --short"

# node / npm aliases
alias n="node"
alias ni="npm install"
alias nd="npm install --save-dev"
alias ng="npm install --global"
alias nx="npm cache clean && rm -rf node_modules && npm install"
alias nln="npm link"
alias nls="npm list --depth=0"
alias nlsg="npm list --depth=0 --global "
alias nu="npm uninstall"

# npm run shortcuts
alias nr="npm run"
alias ns="npm run start"
alias nt="npm run test"
alias nb="npm run build"
alias nl="npm run lint"

# python aliases
alias python="python3"
alias pip="pip3"
alias p="python"

# sleep
alias zzz="pmset displaysleepnow"
alias ZZZ="pmset sleepnow"

# restart
alias ugh="osascript -e 'tell app \"System Events\" to restart'"
